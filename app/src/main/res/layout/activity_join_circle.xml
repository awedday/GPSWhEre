<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinCircleActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="63dp"
        android:text="Введите код друга для подключения"
        android:gravity="center"
        android:textSize="16sp"/>

    <com.goodiebag.pinview.Pinview
        android:id="@+id/pinview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="41dp"
        app:pinBackground="@color/black"
        app:cursorVisible="true"
        app:forceKeyboard="true"
        app:inputType="number"
        app:pinLength="6"
        app:pinHeight="40dp"
        app:pinWidth="35dp"></com.goodiebag.pinview.Pinview>

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pinview"
        android:onClick="submitButtonClick"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Подключиться"/>




</RelativeLayout>